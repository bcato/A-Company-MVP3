<div id="Login-box">
<div class="row-fluid">
	<div class="span12">
		<h1>Log in. </h1>
		<h2>Glad to have you back.</h2>


	  	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-vertical'}) do |f| %>

	  	
		  		<%= f.input :email %>		  
		  		<%= f.input :password %>
		  		<!--<%= f.input_field :remember_me,  label: "remember me", as: :boolean  %> -->
		 	  	
		 	  	<%= f.submit "Log in", class: "btn" %>
			

		<% end %>

		
				<%= render "devise/shared/links" %>
			

	</div>
</div>


