<div id="SignUp-box">
<div class="row-fluid">
	<div class="span5">
		<h1>Log in. </h1>
		<h3>Welcome back. We've missed you.</h3>
		<ul class="bullets">
			<li><h5>BORROW AN INSTRUMENT</h5></li>
			<li>Locally, for a small fee</li>
			<li><h5>LOAN AN INSTRUMENT</h5></li>
			<li>And make some money</li>
			<li><h5>REST ASSURED</h5></li>
			<li>Instruments are delivered door-to-door and 100% insured</li>
		</ul>
	</div>
	<div class="span7">
	  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-vertical'}) do |f| %>

	  	<div class="row-fluid">
		  	<div class="span5 offset1">
		  		<%= f.input :email %></br>
		  	</div>
		  </div>
		  <div class="row-fluid">
		  	<div class="span5 offset1">
		  		<%= f.input :password %>
			</div>
		  </div>
		  <div class="row-fluid">
		  	<div class="span5 offset1">
		  		<%= f.input_field :remember_me, as: :boolean, inline_label: 'Remember me' %>
		  	</div>
		  </div>

		  <div class="row-fluid">
		  	<div class="span5 offset1">
		 	  <%= f.submit "Sign in", class: "btn btn-primary btn-large" %>
			</div>
		 </div>

		<% end %>

		<div class="row-fluid">
		  	<div class="span5 offset1">
				<%= render "devise/shared/links" %>
			</div>
		</div>

	</div>
</div>


