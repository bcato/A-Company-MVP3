<div id="editbox">
  <div class="row-fluid">
    <div class="span6">
      <h1>Edit your profile </h1>

      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-vertical' }) do |f| %>
      <%= f.error_notification %>

        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :email %>


        <div class= "edit_buttons">
          <%= f.submit "Update", class: "btn btn-primary" %>

          <%= link_to 'BACK TO LISTINGS', instruments_path, class: "btn btn-small" %>
        </div>

         <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

    </div>
    <div class="span3">
      <%= f.input :avatar, label: "Upload an image" %>
    </div>
    

   

    <% end %>

  </div>
</div>

