
<div id="SignUp-box">
	
		<div class="row-fluid">
			<div class="span5">
				<h1>Sign up. </h1>
				<h3>It's secure and super easy.</h3>
				<ul class="bullets">
					<li><h5>BORROW AN INSTRUMENT</h5></li>
					<li>Locally, for a small fee</li>
					<li><h5>LOAN AN INSTRUMENT</h5></li>
					<li>And make some money</li>
					<li><h5>REST ASSURED</h5></li>
					<li>Instruments are delivered door-to-door and 100% insured</li>
				</ul>
			</div>
			<div class="span7">
			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-vertical'}) do |f| %>
			  <%= f.error_notification %>

			  	<div class="row-fluid">
				  	<div class="span3">
					  <%= f.input :first_name %>
					</div>
					<div class="span3 offset1">
					  <%= f.input :last_name %>
					</div>
				</div>
				<div class="row-fluid">
				  	<div class="span6">
					  <%= f.input :email, :input_html => {:style=> 'width: 16.000em'} %>
					</div>
				</div>
				<div class="row-fluid">
				  	<div class="span3">
				  		<%= f.input :password %>
					</div>
				  	<div class="span3 offset1">
				  		<%= f.input :password_confirmation, label: "Confirm password" %>
					</div>
				</div>
				<div class="row-fluid">
				  	<div class="span6">
				  <%= f.input :avatar, label: "Upload a profile picture", class: "btn btn-info" %>
				  	</div>
				 </div>
				 <div class="row-fluid">
				  	<div class="span6">
			  	<%= f.submit "SIGN ME UP", class: "btn btn-primary btn-large" %>
			  		</div>
			  	</div>
			  
			  <%= render "devise/shared/links" %>
			  <% end %>

		  	</div>
		</div>
	
</div>





