
<div id="SignUp-box">
	
		<div class="row-fluid">
			
				<h1>Sign up. </h1>
				<h2>It's secure and super easy.</h2>
				
			
			
			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-vertical'}) do |f| %>
			  <%= f.error_notification %>

			  	<div class="row-fluid">
				  	<div class="span4">
					  <%= f.input :first_name %>
					</div>
					<div class="span4">
					  <%= f.input :last_name %>
					</div>
				</div>
				<div class="row-fluid">
				  	<div class="span6">
					  <%= f.input :email, :input_html => {:style=> 'width: 380px'} %>
					</div>
				</div>
				<div class="row-fluid">
				  	<div class="span4">
				  		<%= f.input :password %>
					</div>
				  	<div class="span4">
				  		<%= f.input :password_confirmation, label: "Confirm password" %>
					</div>
				</div>
				<div class="row-fluid">
				 	<div class="span6">
				  <%= f.input :avatar, label: "Upload a profile picture", position: "relative" %>
				  	</div>
				 </div>
				 <div class="row-fluid">
				  	<div class="span6">
			  	<%= f.submit "SIGN ME UP", class: "btn btn-primary btn-large" %>
			  		</div>
			  	</div>
			  
			  <%= render "devise/shared/links" %>
			  <% end %>

		  	
		</div>
	
</div>





