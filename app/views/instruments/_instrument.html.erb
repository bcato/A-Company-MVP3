<div class="box">
	<%= link_to (image_tag instrument.image), instrument %>
	<p class="name">
		<%= instrument.name %>
	</p>
	<p class="category">
		<%= instrument.category %>
	</p>
	<p class="description">
		<%= instrument.description %>
	</p>
	<p class="price">
		$<%= instrument.price %> / WEEK
	</p>
	<div class="row-fixed">
		
			<div class="index_links">
				<div class="span1">
					 <%= link_to instrument.user.first_name,  user_path(instrument.user), :class => "index_links" %>
				</div>
				<div class="span1">
		
					<% if current_user == instrument.user %>
					<p>
					<%= link_to 'Edit', edit_instrument_path(instrument), :class => "index_links" %> |
					<%= link_to 'Remove', instrument, data: {confirm: 'Are you sure?' }, :class => "index_links", method: :delete %>
					</p>
					<% end %>
				</div>
			</div>
		
	</div>
	
</div>
