<div class="box">
	<p class="name">
		<em><%= instrument.name %></em>
	</p>
	<%= link_to (image_tag instrument.image), instrument %>
	<p class="description">
		<%= instrument.description %>
	</p>
	<p>
		<strong>
			 <%= link_to instrument.user.first_name,  user_path(instrument.user) %>
		</strong>
	</p>
	  
	<% if current_user == instrument.user %>
		<p>
		<%= link_to 'Edit', edit_instrument_path(instrument) %>
		<%= link_to 'Remove', instrument, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
</div>








