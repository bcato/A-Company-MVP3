
   <%= simple_form_for(@instrument, html: {class: "form-vertical"}) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :image_file_size, class: "alert alert-error" %>
    <%= f.full_error :image_content_type, class: "alert alert-error" %>

    <%= f.input :name, label: "What is your instrument's name?", :input_html => {:style=> 'width: 20.000em'} %>

    <%= f.input :category, label: "What kind of instrument is it?", :input_html => {:style=> 'width: 20.000em'} %>

    <%= f.input :price, label: "Price", :input_html => { :as => :text, :style=>  "width: 20.000em;"} %>
  
    <%= f.input :description, as: :text, input_html: { rows: "3", style: 'width: 20.000em'} %>
    <%= f.input :image, :hint => "current image: #{f.template.image_tag(f.object.image.url(:thumb))}" %>
    <%= f.button :submit, class: "btn btn-primary" %>
    
  <% end %>


